section.row
   .row
      .col-sm-4
         .panel.panel-primary
            .panel-heading.
               Choose a Cluster...
            .panel-body
               ul.list-group
                  li.list-group-item(ng-repeat="(clusterKey, cluster) in clusters", ng-class="{'list-group-item-info' : cluster.name == chosenCluster.name}", ng-click="chooseCluster(clusterKey)").
                     {{cluster.name}}
      .col-sm-4
         .panel.panel-primary(ng-show="buckets.length > 0")
            .panel-heading.
               Choose a Bucket...
            .panel-body
               ul.list-group
                  li.list-group-item(ng-repeat="bucket in buckets", ng-class="{'list-group-item-info' : bucket.name == chosenBucket.name}", ng-click="chooseBucket(bucket)").
                     {{bucket.name}}
      .col-sm-4
         .panel.panel-primary(ng-show="chosenBucket && chosenCluster")
            .panel-heading.
               Login
            .panel-body
               form(role="form", ng-submit="signin()")
                  .form-group
                     label(for="username") Username:
                     input.form-control(type="text", id="username", name="username", ng-model="username", placeholder="Username")
                  .form-group
                     label(for="password") Password:
                     input.form-control(type="password", id="password", name="password", ng-model="password", placeholder="Password")
                  button.btn.btn-primary(type="submit") Login
   .row
      .col-sm-12
         .panel.panel-default
            .panel-heading.
               Create a stub for a new user
            .panel-body
               form(ng-submit="encrypt()")
                  div.form-group
                     label(for="newUsername") Username
                     input#newUsername.form-control(type="text",ng-model="newUsername",placeholder="Enter Username")
                  div.form-group
                     label(for="newPassword") Password
                     input#newPassword.form-control(type="text",ng-model="newPassword",placeholder="Enter Password")
                  input.btn.btn-default(type="submit", value="Generate")
                  div.form-group
                     label(for="newStub") Stub
                     input#newStub.form-control(type="text",ng-model="newStub",placeholder="", readonly="readonly")
                     span.help-block Insert the generated stub as a new key-value pair to the 'cb::manager::users' document on the target bucket.