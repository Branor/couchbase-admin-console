form(role="form")
   .row.form-group
      label(for="cacQuery") Query
      textarea#cacQuery.form-control(ng-model=cacQuery, placeholder="Query...")
   .row
      .col-sm-6
         .form-group
            label(for="cacPropertyName") Property Name
            input#cacPropertyName.form-control(type="text", ng-model="cacPropertyName", placeholder="Property Name")
      .col-sm-6(ng-hide="showPropertyCustom()")
         .form-group
            label(for="cacPropertyValue") Property Value
            input#cacPropertyValue.form-control(type="text", ng-model="cacPropertyValue", placeholder="Property Value")
      .col-sm-6(ng-show="showPropertyCustom()")
         .form-group
            label(for="cacPropertyCustom") Property Expression
            textarea#cacPropertyCustom.form-control(ng-model="cacPropertyCustom", placeholder="Property Custom")
   .row.radio
      label
         input(type="radio",name="cacActionType", ng-model="cacActionType", value="add")
         |Add Property
   .row.radio
      label
         input(type="radio",name="cacActionType", ng-model="cacActionType", value="delete")
         |Delete Property
   .row.radio
      label
         input(type="radio",name="cacActionType", ng-model="cacActionType", value="change-type")
         |Change Property Type
   .row.radio
      label
         input(type="radio",name="cacActionType", ng-model="cacActionType", value="change-value")
         |Change Property Value
   .row.radio
      label
         input(type="radio",name="cacActionType", ng-model="cacActionType", value="change-custom")
         |Change Property Value - Custom
   .row
      .col-sm-3.col-sm-push-5.btn-group
         label.btn(ng-class="{'btn-danger' : !cacDryRun, 'btn-info' : cacDryRun}")
            input#dry-run-chck(type="checkbox", ng-model="cacDryRun")
            |Dry Run
         button.btn(ng-class="{'btn-danger' : !cacDryRun, 'btn-info' : cacDryRun}")
            |Submit
